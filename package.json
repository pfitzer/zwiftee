  "main": "main.js",
  "build": {
    "appId": "com.michael-pfister.zwiftee",
    "copyright": "Copyright Â©2018 Michael Pfister",
    "productName": "Zwiftee",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng lint && ng test",
    "test:coverage": "ng lint && ng test --watch=false --code-coverage",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "postinstall": "electron-builder",
    "electron": "electron .",
    "electron:build": "ng build --prod && electron .",
    "build:prod": "npm run build -- -c production",
    "electron:win": "npm run build:prod && npx electron-builder build --win"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.4",
    "@angular/common": "^6.1.4",
