{
  "appId": "com.michael-pfister.zwiftee",
  "copyright": "Copyright Â©2018 Michael Pfister",
  "productName": "Zwiftee",
  "icon": "dist/favicon.256x256.ico",
  "nsis": {
    "installerIcon": "dist/favicon.ico",
    "installerHeaderIcon": "dist/favicon.128x128.ico"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ]
  },
  "directories": {
    "output": "app-builds"
  },
  "files": [
    "**/*",
    "dist/*",
    "!*.ts",
    "!.idea/",
    "!LICENSE",
    "!.gitignore",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!tmp/",
    "!angular.json",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "mac": {
    "icon": "dist",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist",
    "target": [
      "AppImage"
    ]
  }
}